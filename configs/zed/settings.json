    "time": {
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--name",
        "mcp-time",
        "--annotation",
        "scope:global",
        "--rm",
        "mcp/time"
      ]
    },
    "docker-memory-global": {
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--name",
        "mcp-memory",
        "--annotation",
        "scope:global",
        "--rm",
        "-v",
        "$HOME/.local/share/mcp/memory/global:/data",
        "mcp/memory"
      ]
    },
    "docker-mongodb": {
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--name",
        "mcp-mongodb",
        "--annotation",
        "scope:global",
        "--rm",
        "-e",
        "MDB_MCP_CONNECTION_STRING",
        "-v",
        "$HOME/.local/share/mcp/mongo/global:/data",
        "mcp/mongodb"
      ],
      "env": {
        "MDB_MCP_CONNECTION_STRING": "mongodb+srv://$MONGO_USER:$MONGO_PASS@localhost:27017/global"
      }
    },
    "docker-search-duckduckgo": {
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--name",
        "mcp-duckduckgo",
        "--annotation",
        "scope:global",
        "--rm",
        "mcp/duckduckgo"
      ]
    },
    "docker-sequentialthinking": {
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--name",
        "mcp-sequential-thinking",
        "--annotation",
        "scope:global",
        "--rm",
        "mcp/sequentialthinking"
      ]
    },
    "docker-github": {
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--name",
        "mcp-github",
        "--annotation",
        "scope:global",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "<YOUR_TOKEN>"
      }
    },
    "docker-gitlab": {
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--name",
        "mcp-gitlab",
        "--annotation",
        "scope:global",
        "--rm",
        "-e",
        "GITLAB_API_URL",
        "-e",
        "GITLAB_PERSONAL_ACCESS_TOKEN",
        "mcp/gitlab"
      ],
      "env": {
        "GITLAB_API_URL": "https://sccm.govus.cisco.com/api/v4",
        "GITLAB_PERSONAL_ACCESS_TOKEN": "op://employee/gitlab/mcp-global/token"
      }
    },
